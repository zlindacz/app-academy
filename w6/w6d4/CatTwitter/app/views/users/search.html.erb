<h1>Search!</h1>

<nav class="users-search">
  <form action="/users/search" method="GET">
    <input
      type="text"
      name="query"
      value="<%= @query %>">

    <input class="submit" type="submit" value="Search Users!">
  </form>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= link_to user.username, user_url(user) %>
        <%= render "follows/form", user: user %>
      </li>
    <% end %>
  </ul>
</nav>
