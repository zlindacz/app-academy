<form action="<%= albums_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <p>
  <label for="new_album">
    Name:
    <input type="text" name="album[album_name]" id="new_album">
  </label>
  </p>

  <p>
    <label for="band_names">
      Band:
      <select name="album[band_id]" id="band_names">
        <% Band.all.each do |band| %>
          <option value="album[band_id]"><%= band.name %></option>
        <% end %>
      </select>
    </label>
  </p>

  <p>
    Live <input type="radio" name="album[recorded_type]" value="live">
    Studio <input type="radio" name="album[recorded_type]" value="studio">
  </p>

  <p>
    <input type="submit" value="Create Album!">
  </p>
</form>
